@page
@model PizzarenaMenu.Pages.PizzaModel
@{
}


<div class="text-center">
    <div class="tx">
        <h1 class="display-4 text-capitalize text-black">The Best pizza ever</h1>
        <h4> Choose from the Menu , Or u can build ur own pizza</h4>
        <h4> It may be named after U</h4>
        <p class="stex">Only one pizza per order</p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeOwn">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeOwnTx">
                            <h3 style="text-align:left">Create Ur own pizza</h3>
                            <p style="text-align:left">Build ur pizza with our pizza builder</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Build Now</a>
                        </div>
                    </div>
                </div>
               
            </div>
            @foreach(var pizza in Model.fakePizzaDb){
                var imagePath = "~/images/Pizzas/" + (pizza.ImgTitle + ".png");

            <div class="col-4 mb-5">
                
                <a class="img-it" asp-area="" asp-page="/Checkout/Checkout" asp-route-ImgTitle="@pizza.ImgTitle" asp-route-PizzaName="@pizza.PizzaName"
                   asp-route-PizzaPrice="@pizza.Price"> <img src="@imagePath" class="w-100" asp-append-version="true" /></a>
                <br/>
            </div>
            }
            
        </div>
        
    </div>


